<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="HighContrastTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@color/HighContrastTextColor</item>
        <item name="colorAccent">@color/HighContrastTextColor</item>
        <item name="colorPrimary">@color/HighContrastTextColor</item>
        <item name="android:textColorSecondary">@color/HighContrastTextColor</item>
        <item name="android:textColorSecondaryInverse">@color/HighContrastTextColor</item>
        <item name="android:headerBackground">@style/myActionBar</item>
        <item name="android:checkboxStyle">@style/myCheckBox</item>
        <item name="android:textColorPrimary">@color/HighContrastTextColor</item>
    </style>

    <style name="myActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">#000</item>
    </style>

    <style name="myCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/HighContrastTextColor</item>
    </style>

    <style name="smallText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="mediumText" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="largeText" parent="AppTheme">
        <item name="android:textSize">28sp</item>
    </style>



</resources>
